<div class='overlaymenu' id='contextmenu' style='display: none'>
    <div onmousedown='fadeOut($(this).parent())'></div>
    <ul onclick='fadeOut($(this).parent())'>
        <li onclick='customise.requestImage()'>Change Background</li>
        <li onclick='arguments[0].stopPropagation()'>
            Notices:
            <select id='noticesFilterSelect' onchange='localStorage.noticeFilter=this.value;customise.filterNotices(this.value);fadeOut($("#contextmenu"))'>
                <option value=''>All Notices</option>
                <option value='7'>Year 7</option>
                <option value='8'>Year 8</option>
                <option value='9'>Year 9</option>
                <option value='10'>Year 10</option>
                <option value='11'>Year 11</option>
                <option value='12'>Year 12</option>
            </select>
        </li>
        <li onclick='localStorage.classicMode="1"==localStorage.classicMode?"0":"1";toggleClass($("html"), "classic");customise.displayImage();'>Toggle Theme</li>
        <li style='border-top:solid 1px #ddd'></li>
        <li onclick='localStorage.clear();location.reload()'>Clear All Data</li>
    </ul>
</div>

<div class='overlaymenu' id='contextmenu' style='display: none'></div>

<script>
    document.addEventListener("contextmenu", e => {
        e.preventDefault();
        if (!$(e.target).parents("#contextmenu ul").length > 0) fadeIn($("#contextmenu"));
    });

    var pressTimer;

    document.addEventListener("pointermove", () => clearTimeout(pressTimer));
    document.addEventListener("pointerdown", e=> {
        (!$(e.target).parents("#contextmenu ul").length > 0) && fadeOut($("#contextmenu"));
    });
</script>